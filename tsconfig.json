{
  "compilerOptions": {
    // File Layout
    "rootDir": "./src",
    "outDir": "./dist",

    // Environment Settings
    "module": "ES2022",
    "moduleResolution": "Bundler",
    "target": "ES2022",

    // Node Types
    "types": ["node"],

    // Output
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,

    // Type Safety
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src"]
}
